                  <ptr target="http://ihrim.huma-num.fr/nmh/Erasmus/Proverbia/Adagium_203.html"/>
                  <!-- http://ihrim.huma-num.fr/nmh/Erasmus/Proverbia/Adagium_203.html -->
                  <ptr target="eebo:Proverbia_203"/>
               </note>

